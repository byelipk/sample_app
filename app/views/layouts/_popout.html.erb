<div class="popout">
	<div class="popout-header">
		<div class="center">
			<span id="popout-toggle">Close</span>
		</div>
	</div>
	<div class="popout-body">
		<div class="popout-bucket">
			<%= gravatar_for @current_user, size: 60 %>
			<div class="bucket-content">
				<h5><%= link_to current_user.first_name, "#" %><h5>
				<h7><%= link_to "Edit Profile", edit_user_path(current_user) %></h7>
			</div>	
			<%= render 'shared/stats' %>	
		</div>
		<div class="thought-box">
			<%= form_tag '#', class: 'post' do %>
	  			<%= text_field_tag '#', nil, 
	  						class: 'input-large', 
	  						placeholder: "What are you thinking?" %>
			<% end %>
		</div>
		<div class="actions">
			<div class="popout-messages">
				<div class="popout-msg">Messages</div>
			</div>
			<div class="popout-conversations">
				<div class="popout-convo">Conversations</div>
			</div>
			<div class="popout-notifications">
				<div class="popout-note">Notifications</div>
			</div>				
		</div>
		<div class="popout-stats">
			<div>
				Total Cred <span>XXX</span>
			</div>
		</div>
	</div>
	<div class="center popout-footer">
		<%= link_to "Sign out", signout_path, method: "delete" %>
	</div>	
</div>