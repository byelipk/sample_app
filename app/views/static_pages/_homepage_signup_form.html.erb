<div class="row-fluid">
	<div class="span5 pull-right well">
		<h4><strong>New to Kshizzy?</strong> Sign up.</h4>
		<%= form_for(@user) do |f| %>	
			<%= f.text_field :name, placeholder: "Name" %>

			<%= f.text_field :email, placeholder: "Email" %>

			<%= f.text_field :password, placeholder: "Password" %>

			<%= f.submit "Sign up for Kshizzy", class: "btn btn-small btn-warning pull-right" %>
		<% end %>		
	</div>
</div>