<div class="row-fluid">	
	<div class="span5 pull-right well">
		<%= form_tag sessions_path do %>
			<%= text_field_tag :email, nil, placeholder: "Email" %>
			<div class="row-fluid">
				<div class="span9">
					<%= password_field_tag :password, nil, placeholder: "Password" %>
				</div>
				<div class="span1">
					<%= submit_tag "Sign in", class: "btn btn-small btn-info" %>
				</div>
			</div>
		<% end %>
		<small class="pull-left"><%= link_to "Forgot password?", '#' %></small>
	</div>
</div>