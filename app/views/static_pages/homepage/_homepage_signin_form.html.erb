<div class="well signin-form">
	<%= form_tag sessions_path do %>
		<%= text_field_tag :email, nil, placeholder: "Email" %>
		<%= password_field_tag :password, nil, placeholder: "Password" %>
		<%= submit_tag "Sign in", class: "btn btn-info btn-large", style: "float:right" %>
	<% end %>
	<small class="pull-left"><%= link_to "Forgot password?", '#' %></small>
</div>
