<div class="well signin-form">
	<%= form_for( @static_page_forms, url: sessions_path ) do |f| %>
		<%= f.text_field :email, placeholder: "Email" %>
		<%= f.password_field :password, placeholder: "Password" %>
		<%= f.submit "Sign in", class: "btn btn-info btn-large", style: "float:right" %>
	<% end %>
	<small class="pull-left"><%= link_to "Forgot password?", new_password_reset_path %></small>
</div>
